@{
    ViewData["Title"] = "作品集";
}
    <div class="text-center">
        <h1 class="display-4">MyWorks</h1>
        <p>也許～每個設計師都需要擁有自己的作品集</p>

        <!--Carousel-->
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/CSharpLogo.png" alt="CSharp Logo">
                </div>
                <div class="carousel-item">
                    <img src="~/images/NETCoreLogo.png" alt="NETCore Logo">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Update.png" alt="Update">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
        <br />
        <!--List-->
        <div class="row">
            <div class="col-sm-4"><img src="~/images/CSharpLogo.png" class="img-thumbnail" alt="CSharp Logo" /></div>
            <div class="col-sm-4"><img src="~/images/NETCoreLogo.png" class="img-thumbnail" alt="CSharp Logo" /></div>
            <div class="col-sm-4"><img src="~/images/Update.png" class="img-thumbnail" alt="CSharp Logo" /></div>
        </div>

    </div>
